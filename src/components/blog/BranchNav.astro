---
interface Props {
  branches: string[];
  activeBranch?: string;
}

const { branches, activeBranch } = Astro.props;
---

<div class="flex items-center gap-2 mb-6 overflow-x-auto pb-2">
  <span class="text-text-muted text-sm whitespace-nowrap">branch:</span>
  <a
    href="/blog"
    class={`px-3 py-1 text-sm rounded border transition-colors whitespace-nowrap ${
      !activeBranch
        ? 'border-accent-green text-accent-green bg-accent-green/10'
        : 'border-border text-text-secondary hover:border-text-secondary'
    }`}
  >
    all
  </a>
  {branches.map((branch) => (
    <a
      href={`/branches/${branch}`}
      class={`px-3 py-1 text-sm rounded border transition-colors whitespace-nowrap ${
        branch === activeBranch
          ? 'border-accent-green text-accent-green bg-accent-green/10'
          : 'border-border text-text-secondary hover:border-text-secondary'
      }`}
    >
      {branch}
    </a>
  ))}
</div>
