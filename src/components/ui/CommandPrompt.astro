---
interface Props {
  command: string;
  output?: string;
  showCursor?: boolean;
}

const { command, output, showCursor = false } = Astro.props;
---

<div class="font-mono">
  <div class="flex items-start">
    <span class="text-accent-green">$</span>
    <span class="ml-2 text-text-primary">{command}</span>
    {showCursor && <span class="cursor-blink"></span>}
  </div>
  {output && (
    <div class="mt-2 text-text-secondary whitespace-pre-wrap">
      {output}
    </div>
  )}
</div>
