---
interface Props {
  code: string;
  language?: string;
  filename?: string;
}

const { code, language = 'text', filename } = Astro.props;
---

<div class="my-4">
  {filename && (
    <div class="bg-bg-tertiary border border-border border-b-0 rounded-t-lg px-4 py-2 text-sm text-text-muted">
      {filename}
    </div>
  )}
  <pre class={`bg-bg-secondary border border-border rounded-lg p-4 overflow-x-auto ${filename ? 'rounded-t-none' : ''}`}>
    <code class={`language-${language}`}>{code}</code>
  </pre>
</div>
