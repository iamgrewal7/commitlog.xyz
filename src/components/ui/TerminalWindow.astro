---
interface Props {
  title?: string;
  showButtons?: boolean;
}

const { title = 'terminal', showButtons = true } = Astro.props;
---

<div class="bg-bg-secondary border border-border rounded-lg overflow-hidden shadow-lg">
  <div class="flex items-center gap-2 px-4 py-2 bg-bg-tertiary border-b border-border">
    {showButtons && (
      <div class="flex gap-2">
        <span class="w-3 h-3 rounded-full bg-accent-red opacity-80"></span>
        <span class="w-3 h-3 rounded-full bg-accent-yellow opacity-80"></span>
        <span class="w-3 h-3 rounded-full bg-accent-green opacity-80"></span>
      </div>
    )}
    <span class="ml-2 text-text-muted text-sm">{title}</span>
  </div>
  <div class="p-4">
    <slot />
  </div>
</div>
